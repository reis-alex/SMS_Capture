<?xml version="1.0" ?>

<robot name="satellite_planar_arm">

  <!-- Colors -->
  <material name="Grey">
      <color rgba="0.2 0.2 0.2 1.0"/>
  </material>
  <material name="Blue">
      <color rgba="0.5 0.7 1.0 1.0"/>
  </material>
  <material name="Red">
      <color rgba="1.0 0.2 0.2 1.0"/>
  </material>

  <!-- ********************************************************** -->
  <!-- Spacecraft base -->
  <link name="Spacecraft">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="100"/>
        <inertia ixx="40" ixy="0" ixz="0" iyy="40" iyz="0" izz="40"/>
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <box size="0.6 0.6 0.6"/>
        </geometry>
        <material name="Grey"/>
      </visual>
      <stiffness name="rigid"/>
  </link>

  <!-- ********************************************************** -->
  <!-- Fixed joint to manipulator base -->
  <joint name="Spacecraft_Manipulator_Joint" type="fixed">
      <parent link="Spacecraft"/>
      <child link="Link_0"/>
      <origin xyz="0.25 0 0.3" rpy="0 0 0"/>
  </joint>

  <!-- Link 0 -->
  <link name="Link_0">
      <inertial>
          <origin xyz="0 0 0.05" rpy="0 0 0"/>
          <mass value="2"/>
          <inertia ixx="0.003" ixy="0" ixz="0" iyy="0.003" iyz="0" izz="0.003"/>
      </inertial>
      <visual>
          <origin xyz="0 0 0.05" rpy="0 0 0"/>
          <geometry>
              <cylinder radius="0.05" length="0.1"/>
          </geometry>
          <material name="Grey"/>
      </visual>
      <stiffness name="rigid"/>
  </link>

  <!-- ********************************************************** -->
  <!-- Joint 1: shoulder yaw -->
  <joint name="Joint_1" type="revolute">
      <parent link="Link_0"/>
      <child link="Link_1"/>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
  </joint>

  <link name="Link_1">
      <inertial>
          <origin xyz="0 0 0.25" rpy="0 0 0"/>
          <mass value="1"/>
          <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.005"/>
      </inertial>
      <visual>
          <origin xyz="0 0 0.25" rpy="0 0 0"/>
          <geometry>
              <cylinder radius="0.04" length="0.5"/>
          </geometry>
          <material name="Blue"/>
      </visual>
      <stiffness name="rigid"/>
  </link>

  <!-- ********************************************************** -->
  <!-- Joint 2: elbow pitch -->
  <joint name="Joint_2" type="revolute">
      <parent link="Link_1"/>
      <child link="Link_2"/>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <axis xyz="1 0 0"/>
  </joint>

  <link name="Link_2">
      <inertial>
          <origin xyz="0 0 0.25" rpy="0 0 0"/>
          <mass value="1"/>
          <inertia ixx="0.004" ixy="0" ixz="0" iyy="0.004" iyz="0" izz="0.004"/>
      </inertial>
      <visual>
          <origin xyz="0 0 0.25" rpy="0 0 0"/>
          <geometry>
              <cylinder radius="0.035" length="0.5"/>
          </geometry>
          <material name="Blue"/>
      </visual>
      <stiffness name="rigid"/>
  </link>

  <!-- ********************************************************** -->
  <!-- Joint 3: wrist pitch -->
  <joint name="Joint_3" type="revolute">
      <parent link="Link_2"/>
      <child link="Link_3"/>
      <origin xyz="0 0 0.5" rpy="0 0 0"/>
      <axis xyz="1 0 0"/>
  </joint>

  <link name="Link_3">
      <inertial>
          <origin xyz="0 0 0.15" rpy="0 0 0"/>
          <mass value="0.5"/>
          <inertia ixx="0.002" ixy="0" ixz="0" iyy="0.002" iyz="0" izz="0.002"/>
      </inertial>
      <visual>
          <origin xyz="0 0 0.15" rpy="0 0 0"/>
          <geometry>
              <cylinder radius="0.03" length="0.3"/>
          </geometry>
          <material name="Blue"/>
      </visual>
      <stiffness name="rigid"/>
  </link>

  <!-- ********************************************************** -->
  <!-- End-effector -->
  <joint name="Joint_EE" type="fixed">
      <parent link="Link_3"/>
      <child link="Link_EE"/>
      <origin xyz="0 0 0.3" rpy="0 0 0"/>
  </joint>

  <link name="Link_EE">
      <inertial>
          <origin xyz="0 0 0" rpy="0 0 0"/>
          <mass value="0.2"/>
          <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
      </inertial>
      <visual>
          <origin xyz="0 0 0" rpy="0 0 0"/>
          <geometry>
              <box size="0.1 0.1 0.1"/>
          </geometry>
          <material name="Red"/>
      </visual>
      <stiffness name="rigid"/>
  </link>

</robot>
